<UserControl x:Class="NewSalesProject.Controls.CurrencyTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewSalesProject.Controls"
             mc:Ignorable="d" 
             Name="uc"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="{Binding Text, ElementName=uc}"/>
        <TextBlock Margin="2 0 0 0" Text="{Binding Currency, ElementName=uc}"/>
    </StackPanel>
</UserControl>
